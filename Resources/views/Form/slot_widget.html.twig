{% block slot_widget %}
    {% spaceless %}
        <div class="row">
            <div class="col-xs-12 col-sm-6" style="border: 1px solid #efefef">
                <div role="range" data-start="{{ form.startAt.vars.id }}" data-end="{{ form.endAt.vars.id }}" data-container="{{ form.range.vars.id }}">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_row(form.event) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(form.startAt) }}
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(form.endAt) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(form.duration) }}
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            {{ form_row(form.capacity) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_row(form.range) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock slot_widget %}

{% block slot_range_row %}
    {{ form_widget(form) }}
{% endblock %}
